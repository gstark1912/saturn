@model App.Models.VendorViewModel
@{
    ViewBag.Title = "Datos Personales";
}


<div class="container sat-spacing">
    <div class="row">
        <div class="sat-titlesOpening col-xs-12">
            <h2>
                @ViewBag.Title
            </h2>
        </div>
    </div>

<form action="DatosPersonales" method="post" enctype="multipart/form-data">
    <div class="container sat-Ds sat-datos">
       
        <div class="row">
            <div class="col-md-10 col-md-offset-1 alert alert-maker">
                @if (ViewBag.Msg != null){
                    <div class="alert alert-success">
                        @ViewBag.Msg
                    </div>
                }
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.CompanyId)
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#user">Datos del usuario</a></li>
                    <li><a data-toggle="tab" href="#company">Datos de la empresa</a></li>
                </ul>
                <div class="tab-content">
                    <div id="user" class="tab-pane fade in active">
                        <div class="row col-lg-12" style="margin-top:20px">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-gabel text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly="true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="company" class="tab-pane fade">
                        <div class="row col-lg-12" style="margin-top:20px">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyDescription, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(m => m.CompanyDescription, new { @class = "form-control", @rows = 3 })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyWebSite, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.CompanyWebSite, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyCity, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.CompanyCity, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyAddress, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.CompanyAddress, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyPostalCode, new { @class = "col-md-4 control-label text-left-important" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.CompanyPostalCode, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyBranchOfficesIn, new { @class = "col-md-7 control-label text-left-important" })
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.CompanyBranchOfficesIn, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyFiscalStartDate, new { @class = "col-md-7 control-label text-left-important" })
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(m => m.CompanyFiscalStartDate, Model.Months, "Seleccione...", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyFiscalEndDate, new { @class = "col-md-7 control-label text-left-important" })
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(m => m.CompanyFiscalEndDate, Model.Months, "Seleccione...", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyPeopleInCompany, new { @class = "col-md-7 control-label text-left-important" })
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.CompanyPeopleInCompany, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" class="btn btn-primary pull-right" value="Guardar cambios" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>
