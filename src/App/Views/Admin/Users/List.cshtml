@{
    ViewBag.Title = "Habilitar usuarios";
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Companía</th>
                    <th>Usuario</th>
                    <th>Nombre y Apellido</th>
                    <th>Email</th>
                    <th style="min-width: 151px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.UsuariosNoHabilitados != null)
                {
                    foreach (var user in ViewBag.UsuariosNoHabilitados)
                    {
                        <tr>
                            <td>@user.Company.CompanyName</td>
                            <td>@user.UserName</td>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                <a href="/Admin/Evaluation/Usuarios/Habilitar/@user.Id" class="btn btn-info" role="button">Habilitar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>