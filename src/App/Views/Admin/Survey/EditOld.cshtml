@model App.Models.Admin.SurveyEditViewModel
@{
    ViewBag.Title = "Evaluación";
}

<h2>@ViewBag.Title</h2>
<hr />

<form action="/Admin/Evaluation/Edit" method="post" enctype="multipart/form-data">
    <h4>Editar</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @Html.ValidationSummary()

                @Html.HiddenFor(x => x.CategoryId)
                
                <div class="form-group">
                    @Html.LabelFor(x => x.SurveyFile)
                    @Html.TextBoxFor(x => x.SurveyFile, new { type = "file" })
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-default" value="Crear" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}