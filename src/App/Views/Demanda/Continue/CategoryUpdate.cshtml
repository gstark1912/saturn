@model App.Models.Survey.SurveyUpdateViewModel
@{
    ViewBag.Title = "Actualizar Encuesta";
}

<form method="post" class="form-horizontal" role="form" action="../Continue/Update">
    <div class="container sat-spacing">
        <div class="row">
            <div class="sat-titlesOpening col-xs-12">
                <h2>@ViewBag.Title</h2>
                <h4 class="title-type">Actualizar datos</h4>
            </div>
            <ol class="breadcrumb sat-breadcrumb" style="background-color: white;">
                <li>Rubro</li>
                <li class="active">Registro</li>
                <li>Fin</li>
            </ol>
        </div>

        @Html.HiddenFor(x => x.CompanyId)

        <div class="container sat-Ds">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    @{int i = 0;  }
                    <div>
                        <h4 class="text-center">
                            @ViewBag.survey.CategoryObj.Name
                        </h4>
                        <input type="hidden" name="Category" value="@ViewBag.Category">
                        <input type="hidden" name="ParentSurveyCompletionId" value="@ViewBag.ParentSurveyCompletionId">
                        <input type="hidden" name="PartialSaveKey" value="@ViewBag.PartialSaveKey">
                        <input type="hidden" name="SurveyCompletionId" value="@ViewBag.SurveyCompletionId">

                        @foreach (var question in Model.SurveyQuestionDTOs)
                        {
                            if (!question.Old)
                            {
                                <input type="hidden" name="surveyCompletionDTOs[@i].QuestionId" value="@question.QuestionId">
                                <input type="hidden" name="surveyCompletionDTOs[@i].Question" value="@question.Question">
                                <input type="hidden" name="surveyCompletionDTOs[@i].SurveyId" value="@ViewBag.survey.SurveyId">
                                Html.RenderAction("Question", "Continue", new { id = question.QuestionId, identifier = i, surveyCompletionId = ViewBag.survey.Id, @class = "col-lg-12" });

                                i++;
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-info pull-right" value="Actualizar" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script src="@Url.Content("~/Scripts/chosen.jquery.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen();
            $('.chosen-select-deselect').chosen({ allow_single_deselect: true });
        });
    </script>
}