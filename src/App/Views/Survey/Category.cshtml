@model App.Models.Survey.CategoryViewModel
@{
    ViewBag.Title = "Obtener Recomendación";
}


<form action="Evaluation" method="post" class="sat-foHorizontal form-horizontal" role="form">
    <div class="container sat-spacing">
    <div class="row sat-rubro01">
        <div class="sat-titlesOpening col-xs-12">
            <h2>@ViewBag.Title</h2>
            <h3 class="title-type">¿Qué tipo de software o servicio necesitas?</h3>
        </div>
        <ol class="breadcrumb sat-breadcrumb">
            <li class="active">Rubro</li>
            <li>Evaluaci&oacute;n</li>
            <li>Registro</li>
            <li>Fin</li>
        </ol>
    </div>
    <div class="row sat-rubro02">
        <div class="col-md-12 alert alert-maker">
            <div class="form-group">
                @Html.ValidationSummary() @Html.LabelFor(m => m.Category, new { @class = "col-md-offset-3 col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.Category, Model.Categories, "Seleccione...", new { @id = "categorySelector", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row sat-rubro03">
        <input type="hidden" id="subCategories" name="subCategories" value="" />
        <div class="col-md-12 col-lg-12" id="subCategoriesTree"></div>
    </div>
    <div class="row sat-rubro04">
        <div class="col-xs-12">
            <input type="submit" class="btn btn-primary" value="Siguiente" />
        </div>
    </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jstree.min.js")
    @Scripts.Render("~/Scripts/Demanda/selectCategory.js")
}