@{
    ViewBag.Title = "FormHome";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary();
            
    @{
        Html.RenderAction("Oferta/Survey", "Survey");
    }
    
    foreach (var question in ViewBag.Questions)
    {
        <div class="form-group">
        <label class="col-md-2 control-label text-center-important">@question.SupplyQuestion</label>
            <div class="col-md-10">
                <select class="form-control">
                    <option>Seleccione..</option>|
                    @foreach (var answer in question.Answers)
                    {
                        <option>@answer.SupplyAnswer</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">@question.SupplyQuestion</label>
            <div class="col-md-10">
                <select class="form-control">
                    <option>Seleccione..</option>|
                    @foreach (var answer in question.Answers)
                    {
                        <option>@answer.SupplyAnswer</option>
                    }
                </select>
            </div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}